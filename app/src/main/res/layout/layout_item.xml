<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitenotsolid"
    android:paddingBottom="8dp"
    >
    <TextView
        android:id="@+id/txtCityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/txtCounrtycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:text="Country"
        app:layout_constraintStart_toStartOf="@+id/txtCityname"
        app:layout_constraintTop_toBottomOf="@+id/txtCityname" />
    <TextView
        android:id="@+id/txtDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCounrtycode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCityname"
        android:text="description"
        android:textSize="20dp"
        android:maxWidth="150dp"
        android:ellipsize="start"
        android:maxLines="2"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:id="@+id/txtFix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCounrtycode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCityname"
        android:text="Fix"
        android:textSize="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        tools:ignore="VectorDrawableCompat" />
    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCounrtycode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCityname"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>